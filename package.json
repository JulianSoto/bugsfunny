{
  "name": "bugsfunny",
  "version": "0.1.2",
  "description": "Bugsfunny is a bug tracker that works along with git and has a Web GUI",
  "main": "cli.js",
  "scripts": {
    "test": "mocha",
    "clone-gui-repo": "git clone https://github.com/JulianSoto/bugsfunny-gui.git",
    "install-gui": "cd bugsfunny-gui && yarn install --production && cd ..",
    "build-gui": "cd bugsfunny-gui && yarn build && mv build .. && cd ..",
    "remove-gui-repo": "rm -dr --force bugsfunny-gui/",
    "prepare": "npm-run-all clone-gui-repo install-gui build-gui remove-gui-repo"
  },
  "author": "juliansoto",
  "license": "ISC",
  "bin": {
    "bugsfunny": "./cli.js"
  },
  "dependencies": {
    "as-table": "^1.0.55",
    "commander": "^7.2.0",
    "node-static": "^0.7.11",
    "simple-git": "^2.38.0"
  },
  "devDependencies": {
    "mocha": "^8.3.2",
    "npm-run-all": "^4.1.5"
  }
}
